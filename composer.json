{
    "name": "jaguata/pet-walking-platform",
    "description": "Plataforma de paseo de mascotas en Paraguay",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Equipo Jaguata",
            "email": "dev@jaguata.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-fileinfo": "*",
        "ext-zip": "*",
        "symfony/polyfill-php70": "^1.30"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.9",
        "friendsofphp/php-cs-fixer": "^3.40"
    },
    "autoload": {
        "psr-4": {
            "Jaguata\\": "src/"
        },
        "files": [
            "src/Config/Constantes.php"
        ],
        "classmap": [
            "src/Services/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Jaguata\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "cs-check": "phpcs src/ tests/",
        "cs-fix": "phpcbf src/ tests/",
        "stan": "phpstan analyse src/ --level=max",
        "fix": [
            "phpcbf src/ tests/",
            "php-cs-fixer fix src/ tests/"
        ],
        "analyse": [
            "@cs-check",
            "@stan"
        ],
        "quality": [
            "@analyse",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
