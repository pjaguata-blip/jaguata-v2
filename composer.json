{
  "name": "jaguata/pet-walking-platform",
  "description": "Plataforma de paseo de mascotas en Paraguay",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Equipo Jaguata",
      "email": "dev@jaguata.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-fileinfo": "*",
    "ext-zip": "*",
    "ext-xml": "*",
    "symfony/polyfill-php70": "^1.30",
    "phpoffice/phpspreadsheet": "^2.1",
    "vlucas/phpdotenv": "^5.6",
    "monolog/monolog": "^3.5",
    "guzzlehttp/guzzle": "^7.9",
    "symfony/var-dumper": "^7.0",
    "symfony/http-foundation": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.9",
    "friendsofphp/php-cs-fixer": "^3.40",
    "fakerphp/faker": "^1.23"
  },
  "autoload": {
    "psr-4": {
      "Jaguata\\": "src/"
    },
    "files": [
      "src/Config/Constantes.php"
    ],
    "classmap": [
      "src/Services/",
      "src/Models/",
      "src/Controllers/",
      "src/Helpers/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Jaguata\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage",
    "cs-check": "phpcs src/ tests/",
    "cs-fix": "phpcbf src/ tests/",
    "stan": "phpstan analyse src/ --level=max",
    "fix": [
      "phpcbf src/ tests/",
      "php-cs-fixer fix src/ tests/"
    ],
    "analyse": [
      "@cs-check",
      "@stan"
    ],
    "quality": [
      "@analyse",
      "@test"
    ],
    "serve": [
      "php -S localhost:8000 -t public"
    ],
    "post-install-cmd": [
      "@composer dump-autoload -o",
      "@dump-autoload"
    ],
    "post-update-cmd": [
      "@composer dump-autoload -o",
      "@dump-autoload"
    ],
    "dump-autoload": "composer dump-autoload -o",
    "dump": "composer dump-autoload -o",
    "rebuild-autoload": [
      "composer dump-autoload -o",
      "@dump-autoload"
    ]
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "preferred-install": "dist",
    "platform-check": false
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.0-dev"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
